{
  "name": "html-template-literal",
  "displayName": "HTML Template Literal",
  "description": "Enhanced HTML support in template literals with folding, IntelliSense, and validation",
  "version": "0.0.5",
  "publisher": "nicolasramirez",
  "author": "ramirezcgn",
  "keywords": [
    "html",
    "template-literal",
    "intellisense",
    "folding",
    "validation"
  ],
  "bugs": {
    "url": "https://github.com/ramirezcgn/html-template-literal/issues"
  },
  "homepage": "https://github.com/ramirezcgn/html-template-literal#readme",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramirezcgn/html-template-literal.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/html-template-literal.json",
        "scopeName": "inline.html.js",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ]
      }
    ],
    "configuration": {
      "title": "HTML Template Literal",
      "properties": {
        "htmlTemplateLiteral.tags": {
          "type": "array",
          "default": [
            "html",
            "dom"
          ],
          "description": "Tag names to detect for HTML template literals (e.g., 'html', 'dom')",
          "items": {
            "type": "string"
          }
        },
        "htmlTemplateLiteral.enableFolding": {
          "type": "boolean",
          "default": true,
          "description": "Enable folding for HTML template literals"
        },
        "htmlTemplateLiteral.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable HTML IntelliSense in template literals"
        },
        "htmlTemplateLiteral.enableValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable HTML validation in template literals"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce": "vsce package --allow-star-activation --no-yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
